{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": "./src",
    "paths": {
      "@config/*": ["config/*"]
    },
    "strict": true,
    "noEmit": false, // keep this if you're building
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
